rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    // Public reads for app assets (images shown on landing/dashboard).
    // Writes are restricted by path.
    match /profiles/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if signedIn() && request.auth.uid == uid;
    }

    match /post-images/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if signedIn() && request.auth.uid == uid;
    }

    match /carousel/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /partners/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /event-images/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

